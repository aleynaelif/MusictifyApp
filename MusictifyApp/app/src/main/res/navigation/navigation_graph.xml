<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/navBarHomeButton">

    <fragment
        android:id="@+id/navBarHomeButton"
        android:name="com.ley.musictifyapp.NavBarHomeButton"
        android:label="fragment_nav_bar_home_button"
        tools:layout="@layout/fragment_nav_bar_home_button" >
        <action
            android:id="@+id/action_navBarHomeButton_to_likedSongs"
            app:destination="@id/likedSongs" />
        <action
            android:id="@+id/action_navBarHomeButton_to_albums"
            app:destination="@id/albums" />
        <action
            android:id="@+id/action_navBarHomeButton_to_playlists"
            app:destination="@id/playlists" />
        <action
            android:id="@+id/action_navBarHomeButton_to_artists"
            app:destination="@id/artists" />
    </fragment>
    <fragment
        android:id="@+id/likedSongs"
        android:name="com.ley.musictifyapp.LikedSongs"
        android:label="fragment_liked_songs"
        tools:layout="@layout/fragment_liked_songs" >
        <action
            android:id="@+id/action_likedSongs_to_navBarHomeButton"
            app:destination="@id/navBarHomeButton" />
    </fragment>
    <fragment
        android:id="@+id/albums"
        android:name="com.ley.musictifyapp.Albums"
        android:label="fragment_albums"
        tools:layout="@layout/fragment_albums" >
        <action
            android:id="@+id/action_albums_to_navBarHomeButton"
            app:destination="@id/navBarHomeButton" />
    </fragment>
    <fragment
        android:id="@+id/artists"
        android:name="com.ley.musictifyapp.Artists"
        android:label="fragment_artists"
        tools:layout="@layout/fragment_artists" >
        <action
            android:id="@+id/action_artists_to_navBarHomeButton"
            app:destination="@id/navBarHomeButton" />
    </fragment>
    <fragment
        android:id="@+id/playlists"
        android:name="com.ley.musictifyapp.Playlists"
        android:label="fragment_playlists"
        tools:layout="@layout/fragment_playlists" >
        <action
            android:id="@+id/action_playlists_to_navBarHomeButton"
            app:destination="@id/navBarHomeButton" />
    </fragment>
</navigation>